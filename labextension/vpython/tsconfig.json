{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es6", "ES5", "ES2015.Promise", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
	"noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "target": "es6",
    "strict": true,
    "strictNullChecks": false,
    "types": []
  },
  "include": ["src/*"]
}
